{% extends 'base.html.twig' %}

{% block title %}Vehicle Repair List{% endblock %}

{% block menuTitle %}Vehicle Repair List{% endblock %}
{% block content %}
    <!-- Page Content -->
    <div class="container-fluid px-4">
        <div class="row my-5">
            <h3 class="fs-4 mb-3">Recent Repair</h3>
            <div class="col">
                <table class="table bg-white rounded shadow-sm  table-hover">
                    <thead>
                    <tr>
                        <th scope="col" width="50">ID</th>
                        <th scope="col">Customer First Name</th>
                        <th scope="col">Customer Last Name</th>
                        <th scope="col">Customer Phone</th>
                        <th scope="col">Vehicle Brand</th>
                        <th scope="col">Vehicle Model</th>
                        <th scope="col">Expert of</th>
                        <th scope="col">Status</th>
                        <th scope="col">Vehicle Problem</th>
                        <th scope="col">Repair Date</th>
                        <th scope="col">Updated Date</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for servicesInfo in servicesInfos %}
                    <tr>
                        <th scope="row">{{ servicesInfo.id }}</th>
                        <td>{{ servicesInfo.getCustomer.getFirstname }}</td>
                        <td>{{ servicesInfo.getCustomer.getSurname }}</td>
                        <td>{{ servicesInfo.getCustomer.getPhoneNumber }}</td>
                        <td>Audi</td>
                        <td>A7</td>
                        <td>Ali Usta</td>
                        <td>Done</td>
                        <td>Air conditionar is broken</td>
                        <td>11.08.2023</td>
                        <td>12.08.2023</td>
                        <td>Edit|Delete</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->
{% endblock %}

