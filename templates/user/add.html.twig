{% extends 'base.html.twig' %}

{% block title %}Add User{% endblock %}

{% block menuTitle %}Add User{% endblock %}

{% block content %}
    <!-- Page Content -->
    <div class="container-fluid px-4">
        <div class="row my-5">
            <form action="" method="post" id="userForm">
                <div class="col-6">
                    <div class="form-outline">
                        <label class="form-label" for="userEmail">User Email</label>
                        <input type="text" id="userEmail" name="userEmail" class="form-control" />
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-outline">
                        <label class="form-label" for="plainPassword">User Password</label>
                        <input type="text" id="plainPassword" name="plainPassword" class="form-control" />
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-outline ">
                        <label class="form-label" for="userRole">User Role</label>
                        <select class="form-select" name="userRole" aria-label="Default select example">
                            {% for userRole in userRoles %}
                                <option value="{{ userRole }}">{{ userRole }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <!-- Submit button -->
                <div class="d-grid mt-4 col-6">
                    <button type="submit" class="btn btn-primary btn-block mb-4 ">Save</button>
                </div>

            </form>
        </div>
    </div>
    <!-- /#page-content-wrapper -->
{% endblock %}



